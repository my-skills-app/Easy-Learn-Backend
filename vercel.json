{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "MONGO_URI": "@MONGO_URI",
    "JWT_SECRET": "@JWT_SECRET",
    "NODE_ENV": "production",
    "RATE_LIMIT_WINDOW": "@RATE_LIMIT_WINDOW",
    "RATE_LIMIT_MAX": "@RATE_LIMIT_MAX"
  },
  "functions": {
    "app.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
